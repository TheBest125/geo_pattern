source 'https://rubygems.org'

# Specify your gem's dependencies in geopatterns.gemspec
gemspec

group :development, :test do
  gem 'activesupport', '~> 4.2', '>= 4.2.7.1'
  gem 'aruba'
  gem 'fuubar'
  gem 'inch'
  gem 'pry'
  gem 'pry-rescue'
  gem 'pry-stack_explorer'
  gem 'rake'
  gem 'rspec'
  gem 'rubocop'
  gem 'simplecov'

  if RUBY_VERSION >= '2'
    gem 'byebug'
    gem 'pry-byebug'
  else
    gem 'debugger'
    gem 'pry-debugger'
  end
end
